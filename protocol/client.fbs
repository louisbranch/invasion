namespace client;

union Request {
  CreateAccount,
  CreateGame,
  JoinGame,
  LeaveGame,
  ChatMessage
}

table Message {
  token:string;
  request:Request;
}

table CreateAccount {
  name:string;
  email:string;
}

table CreateGame {}

table JoinGame {
  game_id:string;
}

table LeaveGame {
  game_id:string;
}

table ChatMessage {
  game_id:string;
  message:string;
  recipients:[string];
}

root_type Message;
